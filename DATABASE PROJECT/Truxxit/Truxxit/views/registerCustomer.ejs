    <body>
            <div class="row">
                    <div class="col-md-12 LoginBox"> 
                        <form action="AddingCustomer" method="post">
                    <input type="hidden" name="action" value="adduser">        
                            <h2 class="text-center">Register Customer</h2>
                            <div class="form-group">
                                <input type="text" class="form-control" name="firstname" value=""  placeholder="FirstName" required />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="lastname" value="" placeholder="LastName" required />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="custuserid" value="" placeholder="Customer UserID" required />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="phonenumber" value="" placeholder="Phone Number" required="required">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" value="" placeholder="Password" required="required">
                            </div>
                            <div class="form-group">
                                    <input type="password" class="form-control" name="confirmpassword" value="" placeholder="Confirm Password" required="required">
                                </div>
                                <div class="form-group">
                                        <input type="text" class="form-control" name="dob" value="" placeholder="Date of Birth" required="required">
                                    </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Register Customer</button>
                            </div>
                        </form>
                    </div>
                </div>
    </body>
